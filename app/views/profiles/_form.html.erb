<%= form_for @profile, :html => { :class => "form-horizontal profile" } do |f| %>

<div class="login_form">
  <section >
  </br>
  </br>
  </br>

   
  <!--  
  <h1> ایجاد پروفایل جدید </h1> -->
    <% if @profile.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading" style="text-align: right">
        <h3 class="panel-title" align="right">
        <!-- 
        <%=  @profile.errors.count.to_s %>  -->
        خطاهایی که مانع ایجاد پروفایل شده است
        </h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @profile.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>


  <!-- <div class="control-group">
    <%= f.label :user_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :user_id, :class => 'form-control' %>
    </div>
    <%= error_span(@profile[:user_id]) %>
  </div> -->
  <div class="control-group">
    <%= f.label t(:first_name), :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :first_name, :class => 'form-control text-right' %>
    </div>
    <%= error_span(@profile[:first_name]) %>
  </div>
  <div class="control-group">
    <%= f.label t(:last_name), :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :last_name, :class => 'form-control text-right' %>
    </div>
    <%= error_span(@profile[:last_name]) %>
  </div>
  <div class="control-group">
    <%= f.label t(:ssn), :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :ssn, :class => 'form-control' %>
    </div>
    <%= error_span(@profile[:ssn]) %>
  </div>
  <div class="control-group">
    <%= f.label t(:email), :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :email, :class => 'form-control' %>
    </div>
    <%= error_span(@profile[:email]) %>
  </div>
  <div class="control-group">
    <%= f.label t(:mobile), :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :mobile, :class => 'form-control' %>
    </div>
    <%= error_span(@profile[:mobile]) %>
  </div>
  <div class="control-group">
    <%= f.label t(:phone_number), :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :phone_number, :class => 'form-control' %>
    </div>
    <%= error_span(@profile[:phone_number]) %>
  </div>
  
  <div class="control-group">
    <%= f.label t(:avatar)  %>
    <%= f.file_field :avatar %> 
    <%= f.hidden_field :avatar_cache %>
  </div>

<br />
<br />

  <%= f.submit nil, :class => 'btn btn-primary' %>
  <!--<%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            profiles_path, :class => 'btn btn-default' %>-->

<% end %>

</section>
</div>
